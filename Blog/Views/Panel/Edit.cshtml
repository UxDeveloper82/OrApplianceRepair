@model PostViewModel

@{ }
<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" asp-for="Title" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label>Tags</label>
            <input class="form-control" asp-for="Tags" />
        </div>
        <div class="form-group">
            <label>Category</label>
            <select class="form-control" asp-for="Category">
                <option value="Washer-Repair">Washer-Repair</option>
                <option value="Refrigator-Repair">Refrigator-Repair</option>
                <option value="Dryer-Repair">Dryer-Repair</option>
            </select>
        </div>
        <div class="form-group">
            <label class="control-label">Body</label>
            <textarea asp-for="Body" id="summernote" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="btn btn-primary" asp-for="CurrentImage" type="hidden" />
            <input class="btn btn-info" asp-for="Image" />
        </div>
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit" />
    </form>
</div>

@section scripts {
    <!-- include summernote css/js -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
    <script>
        $('#summernote').summernote({
            placeholder: 'Post Something.....',
            tabsize: 2,
            height: 100
        });
    </script>

}


