
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header>
    <div class="header-content">
        <div class="header-content-inner">
            <h1 id="homeHeading" class="mx-auto my-0 text-uppercase">PROFESSIONAL, OR APPLIANCE REPAIR FOR YOUR HOME OR BUSINESS</h1>
            <hr>
            <p class="text-white-75 mb-5">With OR Appliance Repair, you can rely on fast and skilled same day appliance repair service. Just give Us a Call, no strings attached!</p>
            <a href="/MyMessages/New" class="btn btn-primary btn-xl page-scroll">Send Me a Message</a>
        </div>
    </div>
</header>

<section id="card-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <hr />
                    <h2 class="text-center">HOME APPLIANCE REPAIR</h2>
                <hr />
            </div>
        </div>
        <div id="card" class="row"></div>
    </div>
</section>
<section id="services" class="mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <hr />
                <h2 class="section-heading">We Provide</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center">
                <div class="card">
                    <img class="img-fluid" src="~/content/images/provide/90daywarranty.png" alt="warranty">
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card">
                    <img class="img-fluid" src="~/content/images/provide/LOW-PRICE.jpg" alt="low-prices">
                </div>
            </div>
            <div class="col-md-4 text-center">
                <div class="card">
                    <img class="img-fluid" src="~/content/images/provide/Customer-Support.jpg" alt="customer-support">
                </div>
            </div>
        </div>
    </div>

</section>

<div id="map">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h3>Areas we covered for Appliance Repair and Electronics Repair Services</h3>
                <hr class="primary">
            </div>
        </div>
        <div class="row">
            <div class="embed-responsive embed-responsive-21by9">
                <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d450906.42910153605!2d-81.89883115548457!3d28.002875335561708!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88dd6ac339a94f0f%3A0x38be38b0aeedeb98!2sPolk%20County%2C%20FL!5e0!3m2!1sen!2sus!4v1595981023610!5m2!1sen!2sus" allowfullscreen></iframe>
            </div>
        </div>
        <div class="row mt-4 mb-4">
            <div class="col-lg-12">
                <div id="city" class="justify-content-end"></div>
            </div>
        </div>
    </div>
</div>
<hr />
<section id="cta">
    <div class="row">
        <div class="col-lg-12 text-center">
            <h3>Having a Problem with a Home Appliance?</h3>
            <h4>Give us a call and we’ll fix your appliance at a very reasonable rate.</h4>
            <h4 class="second-text">Call Us Now At 863-216-8903</h4>
        </div>
    </div>
</section>
@section scripts {
    <script src="~/lib/js/core.js"></script>
}

